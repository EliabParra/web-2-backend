{
    "name": "toproc",
    "version": "0.0.1",
    "description": "Toproc â€” ToProccess core: tx-driven secure dispatch backend.",
    "license": "MIT",
    "main": "dist/src/index.js",
    "scripts": {
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "test": "node --import tsx --import ./test/setup.mjs --test test/**/*.test.mjs",
        "test:watch": "node --import tsx --import ./test/setup.mjs --test test/**/*.test.mjs --watch",
        "test:coverage": "c8 --reporter=text --reporter=text-summary --reporter=lcov node --import tsx --import ./test/setup.mjs --test test/**/*.test.mjs",
        "build": "tsx scripts/build-dist.ts",
        "config:check": "node --import tsx scripts/config/check.ts",
        "verify": "pnpm run typecheck && pnpm run build && tsx scripts/smoke-dist.ts && pnpm test",
        "start": "node --import tsx src/index.ts",
        "dev": "nodemon --legacy-watch --watch src --watch BO --watch public --ext js,ts,json,html,css --signal SIGINT --exec \"node --import tsx src/index.ts\"",
        "db": "node --import tsx scripts/db/index.ts",
        "hashpw": "tsx scripts/hash-password.ts",
        "bo": "node --import tsx scripts/bo/index.ts",
        "export:starter": "tsx scripts/export-starter.ts",
        "docs:gen": "typedoc --out docs/api src BO --entryPointStrategy expand",
        "docs:bo": "node --import tsx scripts/docs/gen-bo-index.ts",
        "playground": "node --import tsx scripts/playground.ts",
        "audit": "node --import tsx scripts/audit.ts"
    },
    "type": "module",
    "dependencies": {
        "bcrypt": "^6.0.0",
        "bcryptjs": "^2.4.3",
        "colors": "^1.4.0",
        "connect-pg-simple": "^10.0.0",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "express-rate-limit": "^7.5.1",
        "express-session": "^1.18.2",
        "helmet": "^8.1.0",
        "nodemailer": "^7.0.12",
        "nodemon": "^3.1.11",
        "pg": "^8.16.3",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/connect-pg-simple": "^7.0.3",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.6",
        "@types/express-session": "^1.18.2",
        "@types/helmet": "^0.0.48",
        "@types/node": "^25.0.3",
        "@types/nodemailer": "^7.0.4",
        "@types/pg": "^8.16.0",
        "c8": "^10.1.3",
        "jsdoc": "^4.0.4",
        "prettier": "^3.6.2",
        "supertest": "^7.1.4",
        "tsx": "^4.21.0",
        "typedoc": "^0.28.16",
        "typescript": "^5.9.3"
    },
    "c8": {
        "all": true,
        "include": [
            "src/**/*.ts"
        ],
        "exclude": [
            "src/index.ts",
            "src/jsdoc/**",
            "test/**",
            "scripts/**",
            "BO/**",
            "public/**",
            "docs/**"
        ]
    }
}
