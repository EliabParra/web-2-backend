{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2022"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,

        "allowJs": false,

        "strict": true,
        "skipLibCheck": true,

        // "types": ["node"], // Removed to allow auto-discovery of express, etc.

        "noEmit": true
    },
    "include": ["src/**/*.ts", "scripts/**/*.ts", "BO/**/*.ts"],
    "exclude": ["node_modules", "dist", "test", "docs", "public"]
}
